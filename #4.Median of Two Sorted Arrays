problem link: https://leetcode.com/problems/median-of-two-sorted-arrays/

Solution (Rajkiran):
  class Solution {
public:
    double findMedianSortedArrays(vector<int>& nums1, vector<int>& nums2) 
    {
        int m=nums1.size(),n=nums2.size(),i=0,j=0;
        double val1=0,val2=0;
        if((m+n)%2)
        {
            for(int cnt=0;cnt<=(m+n)/2;cnt++)
            {
                if(i!=m && j!=n)
                {
                    if(nums1[i]<nums2[j])
                        val1=nums1[i++];
                    else
                        val1=nums2[j++];
                }
                else if(i<m)
                    val1=nums1[i++];
                else
                    val1=nums2[j++];
            }
            return val1;
        }
        else
        {
            for(int cnt=0;cnt<=(m+n)/2;cnt++)
            {
                val2=val1;
                if(i!=m && j!=n)
                {
                    if(nums1[i]<nums2[j])
                        val1=nums1[i++];
                    else
                        val1=nums2[j++];
                }
                else if(i<m)
                    val1=nums1[i++];
                else
                    val1=nums2[j++];
            }
            return  (val1+val2)/2;   
        }
    }
