problem link: https://leetcode.com/problems/search-a-2d-matrix-ii/

Solution: Rajkiran

class Solution {
public:
    bool searchMatrix(vector<vector<int>>& matrix, int target) 
    {
       int m=matrix.size(),n=matrix[0].size();
       int row=0,col=n-1;
        while( (row<m) && (col>=0) )
        {
            if(matrix[row][col]==target)
                return true;
            if(matrix[row][col]<target)
                row++;
            else
                col--;
        }
        return false;
    }
};
